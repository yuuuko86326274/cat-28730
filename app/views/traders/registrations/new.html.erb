<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "traders/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"6文字以上の半角英数字混合" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"同じパスワードを入力" %>
  </div>

  <div class="field">
    <%= f.label :t_name %><br />
    <%= f.text_field :t_name, placeholder:"例）（株）ニャンコ、山田 太郎" %>
  </div>

  <div class="field">
    <%= f.label :t_postal_code %><br />
    <%= f.text_field :t_postal_code, placeholder:"例）123-4567",maxlength:"8" %>
  </div>

  <div class="field">
    <%= f.label :area_id %><br />
    <%= f.collection_select(:area_id, Area.all, :id, :name, {}) %>
  </div>

  <div class="field">
    <%= f.label :t_city %><br />
    <%= f.text_field :t_city, placeholder:"例）横浜市緑区" %>
  </div>

  <div class="field">
    <%= f.label :t_address_num %><br />
    <%= f.text_field :t_address_num, placeholder:"例）青山1-1-1" %>
  </div>

  <div class="field">
    <%= f.label :t_building_num %><br />
    <%= f.text_field :t_building_num, placeholder:"例）小山ビル209" %>
  </div>

  <div class="field">
    <%= f.label :t_tel %><br />
    <%= f.text_field :t_tel, placeholder:"半角、ハイフンなし" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "traders/shared/links" %>
