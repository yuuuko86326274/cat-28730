<%= render "shared/header" %>

<div class="user-contents-rows-personal">
  <div class="user-containers-personal">
    <h2>会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'new_user') do |f| %>
      <%= render "personals/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, autofocus: true, placeholder:"40文字以内", class:"field-in", maxlength:"40" %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"PC・携帯どちらでも可", class:"field-in" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder:"#{@minimum_password_length}文字以上の半角英数字混合", autocomplete: "new-password", class:"field-in" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード（確認）" %>
        <%= f.password_field :password_confirmation, placeholder:"#{@minimum_password_length}文字以上の半角英数字混合", autocomplete: "new-password", class:"field-in" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する", class:"signup-btn"%>
      </div>
    <% end %>
      <div class="signup-footer">
      <%= link_to "戻る", root_path, class:"link-login" %>
      </div>
      <%= render "personals/shared/links" %>
  </div>
</div>

<%= render "shared/footer"%>
