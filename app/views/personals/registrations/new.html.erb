<%= render "shared/header" %>

<div class="user-contents-rows">
  <div class="user-containers">
    <h2>会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'new_user') do |f| %>
      <%= render "personals/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nickname %><br />
        <%= f.text_field :nickname, autofocus: true, placeholder:"ニックネーム", class:"field-in" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"PC・携帯どちらでも可", class:"field-in" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, placeholder:"6文字以上の半角英数字混合", autocomplete: "new-password", class:"field-in" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力", autocomplete: "new-password", class:"field-in" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する", class:"signup-btn"%>
      </div>
    <% end %>
      <div class="signup-footer">
      <%= link_to "戻る", root_path, class:"link-login" %>
      </div>
      <%= render "personals/shared/links" %>
  </div>
</div>

<%= render "shared/footer"%>
